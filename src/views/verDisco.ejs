<% include partials/_header %>
<!-- <%= disco._id %> -->
<div class="container">
  <div class="col-md-8">
    <table class="table table-bordered table-hover">
      <thead>
        <th></th>
        <th>Título del disco</th>
        <th>Intérprete</th>
      </thead>
      <tbody>
        <tr>
          <td rowspan="3">
            <img src="<%= disco.caratula %>" alt="" width="300px" height="300px">
          </td>
          <td><strong><%= disco.titulo %></strong></td>
          <td>
            <a href="/verCantante/<%= disco.interprete._id %>">
              <%= disco.interprete.nombre %>
            </a>
          </td>
        </tr>
        <tr>
          <td>Año publicación: <%= disco.anyo %></td>
          <td>
            <img src="<%= disco.interprete.caratula %>" alt="" width="100px" height="100px"></td>
        </tr>
        <tr>
          <td>
            <!-- <form action="/deleteDisco/<%= disco._id %>?_method=DELETE" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn btn-danger delete" type="submit">Eliminar</button> 
            </form> -->
          </td>
          <td>
            <!-- <a href="/editDisco/<%= disco._id %>" class="btn btn-success">
              Editar
            </a> -->
          </td>
        </tr>
      </tbody>
    </table>
    <div class="card-body"><%= disco.info %></div>
  </div>
  <div class="col-md-6">
    <h3>Canciones del disco</h3>
    <table class="table table-bordered table-hover">
      <% for(var i=0; i < disco.canciones.length; i++){ %>
        <tr>
          <td>
            <%= i+1 %>
          </td>
          <td>
            <strong>
            <span class="tituloCanciones">
              <!-- <a href="/verCancion/<%= disco.canciones[i]._id %>"> -->
                <%= disco.canciones[i].tit_cancion %>
                <!-- </a> -->
            </span>
             <%= disco.canciones[i].num_cancion %>
            </strong>
          </td>
          <td>
            <%= disco.canciones[i].dur_cancion %>
          </td>
        </tr>
      <% } %>
    </table>
  </div>
  <div class="card-body">
    <a href="/discos/a" class="btn btn-warning">
      Volver
    </a>
  </div>
</div>

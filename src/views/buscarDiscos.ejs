<% include partials/_header %>
<div class="container">
  <div class="row">
    <div class="col-md-7 centrar">
      <table class="table table-bordered table-hover">
        <thead>
          <tr class="cabecera">
            <th>N°</th>
            <th>Título</th>
            <th>Intérprete</th>
            <th>Foto</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < discos.length; i++) { %>
            <tr>
              <td><%= i + 1 %></td>
              <td>
                <strong><%= discos[i].titulo %></strong>
              </td>
              <td>
                <a href="/verCantante/<%= discos[i].interprete._id %>/">
                  <%= discos[i].interprete.nombre %>
                </a>
              </td>
              <td>
                <a href="/verDisco/<%= discos[i]._id %>">
                  <img src="<%= discos[i].caratula %>" alt="" width="50px" height="50px">
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% include partials/_footer %>
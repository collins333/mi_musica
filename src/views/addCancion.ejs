<% include partials/_header %>
<div class="container">
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/addCancion" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="num_cancion" id="num_cancion" placeholder="Intérprete">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="tit_cancion" id="tit_cancion" placeholder="Título de la canción">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="dur_cancion" id="dur_cancion" placeholder="Duración">
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="enlace" id="enlace" placeholder="Enlace">
            </div>
            <div class="form-group">
              <select class="form-select form-control" aria-label="selector" name="del_interprete" id="del_interprete">
                <option selected>Selecciona el intérprete</option>
                <% for(var i=0; i < interpretes.length; i++) { %>
                  <option value="<%= interpretes[i]._id %>"><%= interpretes[i].nombre %></option>
                <% } %>
              </select>
            </div>
            <div class="form-group">
              <select class="form-select form-control" aria-label="selector" name="del_disco" id="del_disco">
                <option selected>Selecciona el disco</option>
                <% for(var i=0; i < discos.length; i++) { %>
                  <option value="<%= discos[i]._id %>"><%= discos[i].titulo %> - <%= discos[i].interprete.nombre %></option>
                <% } %>
              </select>
            </div>
            <button class="btn btn-primary btn-block" type="submit">
              Añadir
            </button>
          </form>
        </div>
    </div>
    <div class="card-body">
      <a href="/canciones/1" class="btn btn-warning">
        Volver
      </a>
    </div>
  </div>
</div>
<script>
  document.getElementById('tit_cancion').focus()
 </script>
<% include partials/_footer %>
          <td>
            <%= interprete.discos[i].titulo %>
          </td>
          <td>
            <a href="/verDisco/<%= interprete.discos[i]._id %>">
              <img src="<%= interprete.discos[i].caratula %>" alt="" width="50px" height="50px">
            </a>
          </td>
        </tr>
      <% } %>
    </table>
  </div>
  <div class="card-body">
    <a href="/cantantes/cantantes" class="btn btn-warning">
      Volver
    </a>
  </div>
</div>
